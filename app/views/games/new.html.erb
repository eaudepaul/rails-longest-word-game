<div class="col-md-8 offset-md-2">
<h1>New Game</h1>


<% @letters.each do |letter| %>
<ul class="btn btn-primary m-1 mt-4" style="display: inline">
<li style="display: inline"><%= letter %></li>
</ul>
<% end %>

<br>

<form class="mt-4" action="/score" methods="score" data-turbo="false">
  <input type="text" class="form-control" name="submission">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit" class="btn btn-danger btn-block".369** value="Submit your word!">
</form>

<br>

<%= link_to "Back to home?", "/index" %>
